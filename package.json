{
  "name": "monimentor.github.io",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tailwind:build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "tailwind:watch": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "copy:html": "mkdir -p dist && cp index.html dist/index.html",
    "copy:assets": "mkdir -p dist/assets && cp -R assets/* dist/assets/",
    "dev": "npm run copy:html && npm run copy:assets && npm run tailwind:watch",
    "build": "npm run copy:html && npm run copy:assets && npm run tailwind:build"
  },
